generator client {
  provider = "prisma-client-js"
}

// Update the datasource block with the correct environment variable
datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

// User table
model User {
  id             Int       @id @default(autoincrement())
  username       String?
  email          String    @unique
  profileImage   String?   @map("profile_image")
  players        String[]
}

// Room table
model Room {
  id             Int       @id @default(autoincrement())
  roomID         String    @unique
  roomName       String?
}

